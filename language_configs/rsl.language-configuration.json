{
    "comments": {
        "blockComment": [
            "/*",
            "*/"
        ],
        "lineComment": "//"
    },
    "brackets": [
        [ "(", ")" ],
        [ "[", "]" ],
        [ "{", "}" ]
    ],
    "surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["'", "'"],
		["\"", "\""]
	],
    "autoClosingPairs": [
        { "open": "{", "close": "}" },
        { "open": "[", "close": "]" },
        { "open": "(", "close": ")" },

        { "open": "'", "close": "'", "notIn": ["string", "comment"] },
		{ "open": "\"", "close": "\"", "notIn": ["string"] },
		{ "open": "/**", "close": " */", "notIn": ["string"] }
    ]
}